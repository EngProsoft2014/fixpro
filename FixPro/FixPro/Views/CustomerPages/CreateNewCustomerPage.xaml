                                <yummy:PancakeView BackgroundColor="White" Padding="5,0,5,0" CornerRadius="10" HorizontalOptions="FillAndExpand">
                                    <Entry 
                                          Text="{Binding CustomerDetails.FirstName}" 
                                          Placeholder="First Name"
                                          TextColor="#8f1fff"
                                          FontSize="12"
                                          HorizontalOptions="FillAndExpand"
                                          VerticalTextAlignment="Center">
                                    </Entry>
                                    <yummy:PancakeView.Border>
                                        <yummy:Border Color="LightGray" Thickness="1"></yummy:Border>
                                    </yummy:PancakeView.Border>
                                    <yummy:PancakeView.Shadow>
                                        <yummy:DropShadow Offset="1,2" Color="Black" BlurRadius="1" Opacity="1"></yummy:DropShadow>
                                    </yummy:PancakeView.Shadow>
                                </yummy:PancakeView>
